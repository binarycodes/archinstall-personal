[Unit]
Description = Mount personal document storage volume
Wants=mnt-backup.mount
After=mnt-backup.mount

[Mount]
What=moria.ip.cloudyhome.net:/mnt/zpool0/Backups/HomeAssistant
Where=/mnt/backup/HomeAssistant
Type=nfs
Options=defaults,nfsvers=4,proto=tcp
TimeoutSec=5

[Install]
WantedBy=multi-user.target
